{
  "compilerOptions": {
    "target": "es2018",            
    "lib": ["es2018", "esnext.asynciterable"],             
    "module": "commonjs",          
    "allowJs": true,            
    "outDir": "./dist",                           
    "rootDir": "./src",                      
    "strict": true,            
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },                
    "esModuleInterop": true,      
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,            
    "emitDecoratorMetadata": true,         
    "forceConsistentCasingInFileNames": true 
  }
}
